{
    "compilerOptions": {
      "lib": [
        "es6", "es7", "es2015", "es2016", "es2017", "es2018", "esnext"
      ],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "target": "ES5",
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "baseUrl": "./src",
    },
    "exclude": ["node_modules"]
}